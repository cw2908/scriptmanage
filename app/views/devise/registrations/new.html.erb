
<div id='login-container'>
  <div id='login-form'>
    <div class='login-form-box'>
      <div class='login-header'>
        <h2 class='slds-page-header__title slds-align-middle'>Create Account</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="slds-form-element">
            <%= f.label :email, class: 'slds-form-element__label' %><br />
            <%= f.email_field :email, class: 'form-control slds-input', autofocus: true, autocomplete: "email" %>
          </div>

          <div class="slds-form-element">
            <%= f.label :password, class: 'slds-form-element__label' %>
            <% if @minimum_password_length %>
              <em class='slds-form-element__label'>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: 'form-control slds-input', autocomplete: "off" %>
          </div>

          <div class="slds-form-element">
            <%= f.label :password_confirmation, class: 'slds-form-element__label' %><br />
            <%= f.password_field :password_confirmation, class: 'form-control slds-input last-item-spacer', autocomplete: "off" %>
          </div>

          <div class="login-actions">
            <%= f.submit "Sign up", class: 'login-button slds-button slds-button_brand' %>
          </div>
          <%= render "devise/shared/links" %>
        <% end %>

      </div>
    </div>
  </div>
</div>